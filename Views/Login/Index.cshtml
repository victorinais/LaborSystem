@model UserLogin;

@* Titulo de la vista *@
@{
    ViewData["Title"] = "Crear Oferta";
}

<!DOCTYPE html>
<html lang="es">
<body>
        <div class="row d-flex justify-content-center">
        @* Tabla de Botones de navegación *@
        <div class="col-md-3 col-sm-10 my-3">
            <div class="card p-2 d-flex justify-content-center d-grid gap-2">
                <a class="btn btn-primary fw-bold" type="button"  asp-area="" asp-controller="Jobs" asp-action="Index" asp-route-id="">Listado de ofertas</a>
            </div>
        </div>
        @* Tabla de Lista *@
        <div class="col-md-8">
            <div class=" card p-2">
                <div class="my-3">
                    <h1 class="fw-bold text-center">Crea tu cuenta</h1>
                    <p class="card-text text-center">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum lacus nunc, accumsan.</p>
                </div>
                <form asp-action="Create" method="post">
                    <div class="row d-flex align-content-center g-3 p-2">
                        <div class="my-2">
                            <h3 class="fw-bold text-center">Login</h3>
                        </div>
                        <div class="col-md-6">
                            <label for="InputNameCompany" class="form-label">Usuario</label>
                            <input asp-for="UserName" id="InputNameCompany" class="form-control" placeholder="Mi Empresa S.A.S" aria-label="Nombre" required>
                        </div>
                        <div class="col-md-6">
                            <label for="InputLogoCompany" class="form-label">Contraseña</label>
                            <input asp-for="Password" id="InputLogoCompany" class="form-control" placeholder="www.milogo.com" aria-label="Logo" required>
                        </div>
                        <a class="d-grid gap-2 col-6 mx-auto">
                            <button type="submit" class="btn btn-success fw-bold d-gap">Ingresar</button>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>